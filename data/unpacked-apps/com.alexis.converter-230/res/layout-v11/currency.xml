<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/currency" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:orientation="vertical" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:orientation="vertical" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Spinner android:textSize="@dimen/taillePoliceBoutons" android:gravity="center_horizontal" android:id="@id/group1currency" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <EditText android:textSize="@dimen/taillePoliceTextes" android:gravity="center_horizontal" android:id="@id/edittextcurrency" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/valeurDefaut" android:ems="10" android:layout_below="@id/group1currency" android:inputType="numberSigned|numberDecimal" />
            <Spinner android:textSize="@dimen/taillePoliceBoutons" android:gravity="center_horizontal" android:id="@id/group2currency" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/edittextcurrency" />
            <TextView android:textSize="@dimen/taillePoliceTextes" android:gravity="center_horizontal" android:id="@id/textcurrency" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/valeurDefaut" android:layout_below="@id/group2currency" />
            <TextView android:textSize="@dimen/taillePoliceLastUpdated" android:gravity="center_horizontal" android:id="@id/lastUpdated" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/lastUpdated" android:layout_below="@id/textcurrency" />
            <Button android:textSize="@dimen/taillePoliceBoutons" android:gravity="center_horizontal" android:id="@id/boutonUpdate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/textUpdate" android:layout_below="@id/lastUpdated" />
            <ProgressBar android:id="@id/progress" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:max="100" android:progress="0" android:indeterminate="true" android:layout_below="@id/boutonUpdate" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>