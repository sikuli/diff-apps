<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.alexis.converter">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application android:allowBackup="true" android:backupAgent="Backup" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:restoreAnyVersion="true">
        <meta-data android:name="com.google.android.backup.api_key" android:value="AEdPqrEAAAAIX8avI0FmWwe1rkm4uJ0qzJbHU3VdzDQLfVkumA"/>
        <meta-data android:name="android.app.default_searchable" android:value=".SearchableActivity"/>
        <activity android:label="@string/app_name" android:name="com.alexis.converter.MainActivity" android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.alexis.converter.HomeActivity" android:uiOptions="splitActionBarWhenNarrow" android:windowSoftInputMode="stateHidden"/>
        <activity android:label="@string/titreBoutonSettings" android:name="com.alexis.converter.SettingsActivity"/>
        <activity android:label="@string/titleSettingsSync" android:name="com.alexis.converter.SyncSettingsActivity"/>
        <activity android:label="@string/titreBoutonSearch" android:name="com.alexis.converter.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        <activity android:label="@string/app_name" android:name="com.alexis.converter.ItemListActivity" android:windowSoftInputMode="adjustResize"/>
        <provider android:authorities="com.alexis.converter.SuggestionProvider" android:name="com.alexis.converter.SuggestionProvider"/>
    </application>
</manifest>
