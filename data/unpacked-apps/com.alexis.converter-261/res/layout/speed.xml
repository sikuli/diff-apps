<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/speed" android:background="@color/couleurFond" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:orientation="vertical" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:orientation="vertical" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/taillePoliceTitres" android:textColor="@color/couleurTexte" android:gravity="center_horizontal" android:id="@id/titleSpeed" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/categorySpeed" />
            <Spinner android:textSize="@dimen/taillePoliceBoutons" android:gravity="center_horizontal" android:id="@id/group1speed" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/titleSpeed" />
            <EditText android:textSize="@dimen/taillePoliceTextes" android:gravity="center_horizontal" android:id="@id/edittextspeed" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/valeurDefaut" android:ems="10" android:layout_below="@id/group1speed" android:inputType="numberSigned|numberDecimal" />
            <Spinner android:textSize="@dimen/taillePoliceBoutons" android:gravity="center_horizontal" android:id="@id/group2speed" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/edittextspeed" />
            <TextView android:textSize="@dimen/taillePoliceTextes" android:textColor="@color/couleurTexte" android:gravity="center_horizontal" android:id="@id/textspeed" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/valeurDefaut" android:layout_below="@id/group2speed" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>