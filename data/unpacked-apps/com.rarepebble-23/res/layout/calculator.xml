<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:layout_gravity="center" android:id="@id/buttonTable" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@id/calculatorValue" android:text="1.3456789012345678" style="@style/CalculatorText" />
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false">
            <Button android:id="@id/calculatorCancel" android:paddingRight="22.0dip" android:drawableRight="@drawable/ic_cancel" style="@style/CalculatorTextButton" />
            <Button android:id="@id/calculatorUseResult" android:layout_width="160.0dip" android:layout_span="2" android:text="@string/calculator_use_result" style="@style/CalculatorTextButton" />
            <Button android:id="@id/calculatorBackspace" android:paddingRight="18.0dip" android:layout_width="0.0dip" android:drawableRight="@drawable/ic_backspace" android:layout_weight="1.0" style="@style/CalculatorButton" />
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false">
            <Button android:text="7" style="@style/CalculatorButton" />
            <Button android:text="8" style="@style/CalculatorButton" />
            <Button android:text="9" style="@style/CalculatorButton" />
            <Button android:id="@id/calculatorDivide" android:text="÷" style="@style/CalculatorButton" />
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false">
            <Button android:text="4" style="@style/CalculatorButton" />
            <Button android:text="5" style="@style/CalculatorButton" />
            <Button android:text="6" style="@style/CalculatorButton" />
            <Button android:id="@id/calculatorMultiply" android:text="×" style="@style/CalculatorButton" />
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false">
            <Button android:text="1" style="@style/CalculatorButton" />
            <Button android:text="2" style="@style/CalculatorButton" />
            <Button android:text="3" style="@style/CalculatorButton" />
            <Button android:id="@id/calculatorSubtract" android:text="–" style="@style/CalculatorButton" />
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false">
            <Button android:text="." style="@style/CalculatorButton" />
            <Button android:text="0" style="@style/CalculatorButton" />
            <Button android:id="@id/calculatorEquals" android:text="=" style="@style/CalculatorButton" />
            <Button android:id="@id/calculatorAdd" android:text="+" style="@style/CalculatorButton" />
        </TableRow>
    </TableLayout>
</FrameLayout>