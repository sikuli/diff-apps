{
  "rules": {
    "one-var": [1, "always"],
    "comma-dangle" : [0, "never"],
    "strict" : [2, "global"],
    "no-use-before-define" : [2, "nofunc"],
    "no-path-concat": 2,
    "brace-style": [1, "stroustrup"],
    "no-else-return": 1,
    "new-cap": 1,
    "camelcase": [1,{ "properties": "always" }]
  },
  "extends": "airbnb/base",
  "env": {
    "node": true,
    "mocha": true
  }
}
