<App name="com.apac.sentinel" version_code="1">
  <Directory directory_name="layout">
    <File file_name="activity_update_iccid.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:id="@id/textView1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Current Device ICCID"/>
    <EditText android:enabled="false" android:id="@id/editTextCurrentICCID" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="number"/>
    <TextView android:id="@id/textView2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Currently Saved ICCID"/>
    <EditText android:enabled="false" android:id="@id/editTextSavedICCID" android:layout_width="fill_parent" android:layout_height="wrap_content" android:ems="10" android:inputType="number"/>
    <TextView android:id="@id/textView3" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Updating will save the current device ICCID to the Reference database. A theft alarm may be triggered if/when this changes. Return to this configuration screen to update the reference database."/>
    <Button android:id="@id/button1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Update" android:onClick="onUpdate"/>
</LinearLayout>
    </File>
    <File file_name="log_entry.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:textSize="28.0sp" android:id="@id/entry" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
    </File>
    <File file_name="activity_sentinel_home.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <ImageView android:layout_gravity="center" android:id="@id/imageView1" android:layout_width="252.0dip" android:layout_height="402.0dip" android:src="@drawable/ic_launcher" android:contentDescription="@null"/>
    <Button android:textSize="20.0sp" android:id="@id/btnManageSentinel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Manage Sentinel" android:onClick="onManageSentinel"/>
</LinearLayout>
    </File>
    <File file_name="activity_view_log_entry.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="title"/>
    <EditText android:enabled="false" android:id="@id/txtTitle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Timestamp"/>
    <EditText android:enabled="false" android:id="@id/txtTimeStamp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text"/>
    <Button android:id="@id/btnDelete" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Delete this Entry" android:onClick="onDelete"/>
</LinearLayout>
    </File>
    <File file_name="activity_silent_image.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <SurfaceView android:id="@id/surfaceView" android:layout_width="1.0dip" android:layout_height="1.0dip" android:layout_marginBottom="14.0dip"/>
</LinearLayout>
    </File>
    <File file_name="activity_main.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="View Log" android:onClick="onViewLog"/>
    <Button android:id="@id/btnClearLog" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Clear Log" android:onClick="onClearLog"/>
    <Button android:id="@id/btnConfigureSentinel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Configure ICCID" android:onClick="onConfigureSentinel"/>
    <Button android:id="@id/btnTestBind" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Apply Settings" android:onClick="onApplySettings"/>
</LinearLayout>
    </File>
    <File file_name="activity_lock.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="!!!ALERT!!!"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="The following issue has been detected and requires your attention."/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="What:"/>
    <TextView android:id="@id/txtWhat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="What has happened"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reason:"/>
    <TextView android:id="@id/txtReason" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText android:id="@id/txtPassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Enter Password" android:inputType="textPassword"/>
    <Button android:id="@id/btnCheckPasscode" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="OK" android:onClick="onCheckPasscode"/>
</LinearLayout>
    </File>
  </Directory>
  <Directory directory_name="xml">
    <File file_name="settings.xml">
      <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="User Profile">
        <CheckBoxPreference android:title="Monitor the ICCID" android:key="pref_checkiccid" android:summary="Trigger a theft if the SIM card is changed. A thief might switch out the SIM as a first step. This should really be enabled!" android:defaultValue="true"/>
        <CheckBoxPreference android:enabled="false" android:title="Monitor Server" android:key="pref_checkserver" android:summary="Server support is not currenty supported!"/>
        <CheckBoxPreference android:title="Auto Reply" android:key="pref_smsreply" android:summary="Auto Reply to SMS commands"/>
        <CheckBoxPreference android:title="Intrusion Detection" android:key="pref_ids" android:summary="Monitor and track SMS commands and look for potential abuse" android:defaultValue="true"/>
        <CheckBoxPreference android:title="GPS" android:key="pref_gps" android:summary="Allow the GPS SMS command"/>
        <CheckBoxPreference android:enabled="false" android:title="Theft Monitor" android:key="pref_service" android:summary="Start the Theft Monitor Background service" android:defaultValue="true"/>
        <CheckBoxPreference android:title="Start on Boot" android:key="pref_start_on_boot" android:summary="Start Sentinel when device is booted" android:defaultValue="true"/>
        <CheckBoxPreference android:title="Wipe external storage" android:key="pref_allow_wipe" android:summary="Allow Sentinel to wipe external storage" android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>
    </File>
    <File file_name="device_admin.xml">
      <device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <force-lock/>
        <wipe-data/>
    </uses-policies>
</device-admin>
    </File>
  </Directory>
  <Directory directory_name="menu">
    <File file_name="main.xml">
      <menu xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@id/action_settings" android:orderInCategory="100" android:title="Settings" android:showAsAction="never"/>
</menu>
    </File>
  </Directory>
</App>
