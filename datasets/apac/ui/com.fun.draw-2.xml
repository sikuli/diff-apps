<App name="com.fun.draw" version_code="2">
  <Directory directory_name="layout">
    <File file_name="view_source.xml">
      <com.fun.draw.widget.FixedScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <HorizontalScrollView android:scrollbars="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TextView android:typeface="monospace" android:id="@id/view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</com.fun.draw.widget.FixedScrollView>
    </File>
    <File file_name="main.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <ListView android:id="@android:id/list" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0"/>
    <Button android:id="@id/viewSource" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="View Source"/>
</LinearLayout>
    </File>
    <File file_name="draw.xml">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <com.fun.draw.widget.ScriptedView android:id="@id/view" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0"/>
    <Button android:id="@id/viewSource" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="View Source"/>
</LinearLayout>
    </File>
  </Directory>
</App>
