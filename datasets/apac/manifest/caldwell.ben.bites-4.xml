<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="caldwell.ben.bites" versionName="1.3" versionCode="4">
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name=".BitesApp">
        <provider android:authorities="caldwell.ben.provider.RecipeBook" android:name="caldwell.ben.bites.RecipeBookProvider"/>
        <meta-data android:name="android.app.default_searchable" android:value=".Bites"/>
        <activity android:label="@string/app_name" android:name="caldwell.ben.bites.Bites">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="caldwell.ben.bites.RECEIVED_RECIPE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:mimeType="text/xml"/>
                <data android:mimeType="application/xml"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <receiver android:enabled="true" android:name="caldwell.ben.bites.SmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <activity android:name="caldwell.ben.bites.RecipeList"/>
        <activity android:name="caldwell.ben.bites.IngredientList"/>
        <activity android:name="caldwell.ben.bites.MethodList"/>
        <activity android:label="@string/app_name" android:name="caldwell.ben.bites.BitesPreferences"/>
        <activity android:label="@string/title_activity_contact_list" android:name="caldwell.ben.bites.ContactList"/>
        <activity android:label="@string/title_activity_add" android:name="caldwell.ben.bites.AddActivity"/>
    </application>
</manifest>
