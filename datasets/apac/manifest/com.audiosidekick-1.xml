<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.audiosidekick" versionName="1.0" versionCode="1">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <application android:allowBackup="false" android:debuggable="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name="com.audiosidekick.App" android:theme="@android:style/Theme.Holo">
        <activity android:label="@string/app_name" android:name="com.audiosidekick.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_create_remote_account" android:name="com.audiosidekick.ui.CreateRemoteAccountActivity"/>
        <activity android:label="@string/title_activity_recorder" android:name="com.audiosidekick.ui.RecorderActivity"/>
        <activity android:label="@string/title_activity_manage_notes" android:name="com.audiosidekick.ui.ManageNotesActivity"/>
        <activity android:label="@string/title_activity_note_editor" android:name="com.audiosidekick.ui.NoteEditorActivity"/>
        <activity android:label="@string/title_activity_preferences" android:name="com.audiosidekick.Preferences"/>
        <provider android:authorities="com.audiosidekick.provider" android:exported="false" android:name="com.audiosidekick.NotesProvider"/>
        <service android:exported="true" android:name="com.audiosidekick.services.SyncService" android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/syncadapter"/>
        </service>
        <service android:exported="false" android:name="com.audiosidekick.services.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator" android:resource="@xml/authenticator"/>
        </service>
    </application>
<uses-sdk android:targetSdkVersion="15" android:minSdkVersion="11"/></manifest>
