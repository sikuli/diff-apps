<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.arabicize" versionName="1.0" versionCode="1">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application android:allowBackup="true" android:icon="@drawable/badaoui" android:label="@string/app_name" android:name=".App" android:theme="@android:style/Theme.Holo">
        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:label="@string/app_name" android:name=".SoundWordActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:name=".DeleteActivity" android:screenOrientation="portrait"/>
        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:name=".utilities.Preferences" android:screenOrientation="portrait"/>
        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:name=".database.UpdateActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoDisplay"/>
        <provider android:authorities="com.arabicize.words" android:exported="false" android:name=".database.WordsContentProvider" android:readPermission="true" android:writePermission="true"/>
        <provider android:authorities="com.arabicize.usage" android:exported="false" android:name=".database.UsageContentProvider" android:readPermission="true" android:writePermission="true"/>
        <receiver android:name=".database.UpdateAlarmReceiver"/>
        <receiver android:enabled="false" android:name=".database.UpdateBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <service android:name=".database.UpdateSchedulingService"/>
    </application>
<uses-sdk android:targetSdkVersion="19" android:minSdkVersion="19"/></manifest>
