<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.instantreplay" versionName="1.0" versionCode="1">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-feature android:name="android.hardware.camera"/>
    <application android:allowBackup="true" android:debuggable="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name=".CameraActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:name=".VideoPlayerActivity" android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>
        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:name=".GalleryActivity" android:theme="@android:style/Theme.Holo">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".CameraActivity"/>
        </activity>
        <activity android:name=".SettingsActivity" android:theme="@android:style/Theme.Holo">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".CameraActivity"/>
        </activity>
        <activity android:name=".HelpActivity" android:theme="@android:style/Theme.Holo">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".CameraActivity"/>
        </activity>
    </application>
<uses-sdk android:targetSdkVersion="15" android:minSdkVersion="14"/></manifest>
